
<section id="add">
     <div class="container">
            <div class="back-btn">
               <a class="btn btn-border" href="/">WRÓĆ</a>
            </div>

            <div class="planList">

                <ul class="planUl green-shadow">
                    <div class="title">
                        <p>DATA WYGENEROWANIA PLANU:</p>
                    </div>
                    @foreach(var timetable in generatedTimetables)
                    {
                       <li>
                           <div class="planDetail">
                               <span>@timetable.GenereteTime</span>
                               <a class="btn btn-border" href="/plans/@timetable.Id">Przejdź</a>
                            @if(timetable.Id != currentTimetableId)
                            {
                                <button @onclick="async ()=> await ChangeTimetable(timetable.Id)" class="btn btn-border">Przełącz</button>
                            }                           
                           </div>
                       </li>
                    }
                    <button @onclick="CreateNewTimetable" class="btn btn-border">Nowy plan lekcji</button>
                </ul>
            </div>
        </div>
</section>